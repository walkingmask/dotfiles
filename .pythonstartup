import sys
import os
import math
import random
import datetime

try:
    import numpy as np
except ModuleNotFoundError:
    pass


if 'numpy' in sys.modules:
    def sigmoid(z):
        return 1 / (1 + np.exp(-z))
    def softmax(a):
        c = np.max(a)
        exp_a = np.exp(a - c)
        sum_exp_a = np.sum(exp_a)
        y = exp_a / sum_exp_a
        return y 
